#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

%:
	dh $@ --with autoreconf

override_dh_auto_configure:
	# Skip

override_dh_auto_build:
	# Skip

override_dh_auto_install:
	mkdir -p $$(pwd)/debian/giella-gtcore/usr/share/giella-gtcore
	cp -a [A-Ca-c]* [E-Ze-z]* $$(pwd)/debian/giella-gtcore/usr/share/giella-gtcore/
	cd $$(pwd)/debian/giella-gtcore/usr/share/giella-gtcore/ && \
	./configure --prefix=/usr && \
	$(MAKE) && \
	$(MAKE) DESTDIR=$$(pwd)/../../.. install
	echo -e '#!/bin/bash\necho "/usr/share/giella-gtcore"' > $$(pwd)/debian/giella-gtcore/usr/bin/gt-core.sh
	chmod +x $$(pwd)/debian/giella-gtcore/usr/bin/gt-core.sh
	find . -type d -name autom4te.cache -print0 | xargs -0 rm -rf
	find . -type d -name build-aux -print0 | xargs -0 rm -rf
	find . -type f -name 'autogen.sh' -print0 | xargs -0 rm -rf
	find . -type f -name 'configure*' -print0 | xargs -0 rm -rf
	find . -type f -name 'config.*' -print0 | xargs -0 rm -rf
	find . -type f -name 'Makefile*' -print0 | xargs -0 rm -rf
	find . -type f -name '*.ac' -print0 | xargs -0 rm -rf
	find . -type f -name '*.am' -print0 | xargs -0 rm -rf
	find . -type f -name '*.in' -print0 | xargs -0 rm -rf

override_dh_auto_test:
	# Skip
